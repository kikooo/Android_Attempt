<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.kikooo.secondattempt.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:text="0"
        android:id="@+id/button_zero"
        android:height="70px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button_three"
        android:layout_toLeftOf="@+id/button_three" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/button_point"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_zero"
        android:layout_alignTop="@+id/button_zero"
        android:layout_toLeftOf="@+id/button_equal"
        android:layout_toStartOf="@+id/button_equal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button_equal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_three"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_three"
        android:layout_toEndOf="@+id/button_three" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:text="1"
        android:id="@+id/button_one"
        android:layout_above="@+id/button_zero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button_two"
        android:layout_alignTop="@+id/button_one"
        android:layout_toRightOf="@+id/button_one"
        android:layout_toEndOf="@+id/button_one"
        android:layout_above="@+id/button_zero" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button_three"
        android:layout_alignTop="@+id/button_two"
        android:layout_toRightOf="@+id/button_two"
        android:layout_toEndOf="@+id/button_two"
        android:layout_above="@+id/button_zero" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:text="4"
        android:id="@+id/button_four"
        android:layout_above="@+id/button_one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button_five"
        android:layout_above="@+id/button_two"
        android:layout_toRightOf="@+id/button_four"
        android:layout_toEndOf="@+id/button_four"
        android:layout_below="@+id/button_seven" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button_six"
        android:layout_above="@+id/button_equal"
        android:layout_toRightOf="@+id/button_five"
        android:layout_toEndOf="@+id/button_five"
        android:layout_below="@+id/button_eight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button_add"
        android:layout_above="@+id/button_equal"
        android:layout_toRightOf="@+id/button_six"
        android:layout_toEndOf="@+id/button_six"
        android:layout_alignTop="@+id/button_six" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:text="7"
        android:id="@+id/button_seven"
        android:layout_above="@+id/button_four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button_eight"
        android:layout_alignTop="@+id/button_seven"
        android:layout_toRightOf="@+id/button_seven"
        android:layout_toEndOf="@+id/button_seven"
        android:layout_above="@+id/button_four" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button_nine"
        android:layout_above="@+id/button_six"
        android:layout_toRightOf="@+id/button_eight"
        android:layout_toEndOf="@+id/button_eight"
        android:layout_below="@+id/button_divide" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button_minus"
        android:layout_above="@+id/button_add"
        android:layout_toRightOf="@+id/button_nine"
        android:layout_toEndOf="@+id/button_nine"
        android:layout_alignTop="@+id/button_nine" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:text="C"
        android:id="@+id/button_clear"
        android:layout_above="@+id/button_seven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รท"
        android:id="@+id/button_divide"
        android:layout_alignTop="@+id/button_clear"
        android:layout_toRightOf="@+id/button_clear"
        android:layout_toEndOf="@+id/button_clear"
        android:layout_above="@+id/button_seven" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ร"
        android:id="@+id/button_multiple"
        android:layout_alignTop="@+id/button_divide"
        android:layout_toRightOf="@+id/button_divide"
        android:layout_toEndOf="@+id/button_divide"
        android:layout_above="@+id/button_eight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="del"
        android:id="@+id/button_del"
        android:layout_alignBottom="@+id/button_multiple"
        android:layout_toRightOf="@+id/button_multiple"
        android:layout_toEndOf="@+id/button_multiple"
        android:layout_alignTop="@+id/button_multiple" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView_result"
        android:layout_above="@+id/button_clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_del"
        android:layout_alignEnd="@+id/button_del"
        android:layout_alignParentTop="true"
        android:textSize="120px"
        android:gravity="bottom|right"
        android:maxLines="2"
        android:minLines="1" />
</RelativeLayout>
